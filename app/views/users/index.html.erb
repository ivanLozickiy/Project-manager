<div>
	<h1>All users</h1><br>
	<table class="table">
		<thead>
		    <tr>
		      <th>Full name</th>
		      <th>Email</th>
		      <th colspan="3"></th>
		    </tr>
		</thead>

		<tbody>
			<% @users.each do |user| %>
       			<tr>
           			<td><%= user.full_name %></td>
           			<td><%= user.email %></td>
           			<td class="btn">
						<%= form_tag controller: 'users', action: 'make_admin', id: user, method: :get do %>
							<% if user.admin? %>
								<%= submit_tag "Remove admin" %>
							<% else %>
								<%= submit_tag "Make admin" %>
							<% end %>
						<% end %>
           			</td>
       			</tr>
			<% end %>   
		</tbody>
	</table>
</div>