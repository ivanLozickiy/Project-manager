<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Users</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% unless @tasks.nil? %>
      <% @tasks.each do |task| %>
        <tr>
          <% if current_user.admin? %>
            <td><%= task.title %></td>
            <td><%= task.description %></td>
            <td><%= task.status %></td>
            <td><%= task.users.map{ |u| u.full_name }.join(', ') %></td>
            <td><%= link_to 'Show', [task.project, task] %></td>
            <td><%= link_to 'Edit', edit_project_task_path(task.project, task) %></td>
            <td><%= link_to 'Destroy', [task.project, task], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% else %>
            <% if task.user_ids.include?(current_user.id) %>
              <td><%= task.title %></td>
              <td><%= task.description %></td>
              <td><%= task.status %></td>
              <td><%= task.users.map{ |u| u.full_name }.join(', ') %></td>
              <td><%= link_to 'Show', [task.project, task] %></td>
            <% end %>
          <% end %>          
        </tr>
      <% end %>
    <% end %>    
  </tbody>
</table>

<br>

<div>
  <div style="float:left">
    <% if current_user.admin? %>
      <%= button_to 'New Task', new_project_task_path, :method => :get %>
    <% end %>    
  </div>
  <div style="float:right">    
    <%= button_to 'Back', projects_path, :method => :get %>
  </div> 
</div>
